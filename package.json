{
  "name": "vcc-loader",
  "productName": "VCC Loader",
  "version": "0.14.0",
  "main": "src/main.js",
  "author": "NovaVoidHowl",
  "description": "",
  "scripts": {
    "lint": "eslint src",
    "clean": "rimraf dist",
    "start": "electron .",
    "start-vcc-test": "electron . vcc://vpm/addRepo?url=https://Adjerry91.github.io/VRCFaceTracking-Templates/index2.json",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NovaVoidHowl/VCC-Loader.git"
  },
  "bugs": {
    "url": "https://github.com/NovaVoidHowl/VCC-Loader/issues"
  },
  "homepage": "https://github.com/NovaVoidHowl/VCC-Loader#readme",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "eslint": "^9.12.0",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "node-persist": "^4.0.3",
    "semver": "^7.6.3",
    "sudo-prompt": "^9.2.1",
    "win-version-info": "^6.0.1"
  },
  "build": {
    "appId": "com.novavoidhowl.vccloader",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/android-chrome-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "shortcutName": "VCC Loader",
      "uninstallDisplayName": "VCC Loader",
      "include": "build/installer.nsh"
    },
    "files": [
      "dist/**/*",
      "build/license.txt",
      "src/**/*"
    ]
  }
}
